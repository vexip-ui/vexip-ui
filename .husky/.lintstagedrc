{
  "*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}": [
    "prettier --write",
    "eslint --fix"
  ],
  "{!(package)*.json,*.code-snippets,.!(browserslist|npm)*rc}": [
    "prettier --write --parser json"
  ],
  "package.json": [
    "prettier --write"
  ],
  "*.{css,scss,html}": [
    "prettier --write",
    "stylelint --fix \"strict\""
  ],
  "*.md": [
    "prettier --write"
  ],
  "*.vue": [
    "prettier --write",
    "eslint --fix",
    "stylelint --fix \"strict\""
  ]
}

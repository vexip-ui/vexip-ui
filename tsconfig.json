{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "vue",
    "sourceMap": false,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./*"],
      "@vexip-ui/*": ["common/*/src"],
      "vexip-ui": ["."]
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    "common/*/src",
    "components",
    "dev-server",
    "directives",
    "playground",
    "index.ts",
    "full-lib.ts",
    "types.d.ts"
  ],
  "exclude": ["node_modules", "./types.d.ts"]
}
